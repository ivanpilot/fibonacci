{
    "AWSEBDockerrunVersion": 2,
    "containerDefinitions": [
        {
            "name": "client",
            "image": "ivanpilot/client",
            "hostname": "client",
            "essential": false
        },
        {
            "name": "server",
            "image": "ivanpilot/server",
            "hostname": "api",
            "essential": false
        },
        {
            "name": "worker",
            "image": "ivanpilot/worker",
            "hostname": "worker",
            "essential": false
        },
        {
            "name": "nginx",
            "image": "ivanpilot/nginx",
            "hostname": "nginx",
            "essential": true,
            "portMapping": [
                {
                    "hostPort": 80,
                    "containerPort": 80
                }
            ],
            "links": ["server", "client"]
        }
    ]
}
